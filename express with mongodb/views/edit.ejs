<% layout("layout/boilerplate.ejs") %>

<!----------------------------------------------------------------->
<h1>Update your book details</h1>

<form
  action="/books/<%= book._id %>?_method=PUT"
  method="post"
  class="new_form"
>
  <div class="form_div">
    <label for="title">Title</label>
    <input
      type="text"
      id="title"
      minlength="5"
      maxlength="100"
      name="book[title]"
      value="<%= book.title %>"
      autocomplete="off"
      required
    />
  </div>
  <div class="form_div">
    <label for="author">Author</label>
    <input
      type="text"
      id="author"
      minlength="5"
      maxlength="50"
      name="book[author]"
      value="<%= book.author %>"
      autocomplete="off"
      required
    />
  </div>
  <div class="form_div">
    <label for="price">Price</label>
    <input
      type="text"
      id="price"
      name="book[price]"
      min="1"
      value="<%= book.price %>"
      autocomplete="off"
      required
    />
  </div>

  <!-- ------------ radio functionality ---------------- -->
  <div class="form_div_radio">
    <label>Category</label><br />

    <input type="radio" id="fiction" name="book[category]" value="fiction" <% if
    (book.category === 'fiction') { %> checked <% } %> required />
    <label for="fiction">Fiction</label><br />

    <input type="radio" id="non-fiction" name="book[category]"
    value="non-fiction" <% if (book.category === 'non-fiction') { %> checked <%
    } %> />
    <label for="non-fiction">Non-Fiction</label>
  </div>

  <button type="submit">Update my book!</button>
</form>

<!----------------------------------------------------------------->
<a href="/books" class="back_to_books">Back to books data</a>
