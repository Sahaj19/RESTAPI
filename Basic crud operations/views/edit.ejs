<% layout("./layout/boilerplate.ejs") %>

<!--------------------------------------------------------->
<h1>Edit your Post</h1>

<form
  action="/posts/<%= post.id %>?_method=PUT"
  method="post"
  class="edit_form"
>
  <div class="field">
    <label for="username">Username</label>
    <input
      type="text"
      name="username"
      value="<%= post.username %>"
      id="username"
      autocomplete="off"
      required
    />
  </div>
  <div class="field">
    <label for="content">Content</label>
    <textarea
      type="text"
      name="content"
      rows="5"
      id="content"
      autocomplete="off"
      required
    >
<%= post.content %></textarea
    >
  </div>
  <button type="submit">Edit Post</button>
</form>

<!--------------------------------------------------------->
<a href="/posts" class="back">Back to posts</a>
